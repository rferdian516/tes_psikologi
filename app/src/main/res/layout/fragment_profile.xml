<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F6FC"
    tools:context=".ui.profile.ProfileFragment"
    >

    <TextView
        android:id="@+id/tvProfile"
        android:layout_margin="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"

        />

    <ImageButton
        android:id="@+id/btn_Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="24dp"
        android:padding="16dp"
        android:src="@drawable/ic_logout"
        android:background="@drawable/custom_btn_logout"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvProfile"
        android:layout_above="@id/lnrProfile"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_profile" />
            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/nama"
                android:textSize="28sp"
                android:textStyle="bold" />


        </LinearLayout>



    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lnrProfile"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_bg_profile"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/rlv_Gaya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgKelompok"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginRight="16dp"
                android:padding="16dp"
                android:src="@drawable/ic_kelompok"
                android:background="@drawable/custom_bg_kelompok"
                />

            <TextView
                android:layout_toRightOf="@id/imgKelompok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gaya Belajar"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlv_Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            >

            <ImageView
                android:id="@+id/imgPengaturan"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginRight="16dp"
                android:padding="16dp"
                android:src="@drawable/ic_pengaturan"
                android:background="@drawable/custom_bg_pengaturan"
                />

            <TextView
                android:layout_toRightOf="@id/imgPengaturan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Nama"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

