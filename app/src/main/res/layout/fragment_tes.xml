<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="quiz"
            type="com.example.tespsikologi.fragments.TesFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            tools:context=".fragments.TesFragment">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_onboarding_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_onboarding_1"
                android:textColor="@color/dark_blue"
                android:textSize="19sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_onboarding_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="@string/description_onboarding_1"
                android:textColor="@color/dark_blue"
                android:textSize="24sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/custom_background_tes">

                <TextView
                    android:id="@+id/tv_soal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:text="@{quiz.currentQuestion.theQuestion}"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_jawaban_satu"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/custom_btn"
                    android:text="@{quiz.answers[0]}"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_jawaban_dua"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginVertical="8dp"
                    android:gravity="center"
                    android:background="@drawable/custom_btn"
                    android:text="@{quiz.answers[1]}"
                    android:textAlignment="gravity"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_jawaban_tiga"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/custom_btn"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:text="@{quiz.answers[2]}"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_jawaban_empat"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textAlignment="gravity"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/custom_btn"
                    android:text="@{quiz.answers[3]}"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>